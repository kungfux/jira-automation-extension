{
  "manifest_version": 3,
  "name": "jira-automation-extension",
  "version": "1.0",
  "description": "Browser extension to automate typical actions in JIRA.",
  "icons": {
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.atlassian.net/jira/*"
      ],
      "js": [
        "index.js"
      ]
    }
  ],
  "host_permissions": [
    "*://*.atlassian.net/jira/*"
  ]
}